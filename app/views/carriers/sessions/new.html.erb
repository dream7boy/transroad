<section id="sign_in" class="container-fluid section__carrier one--page">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="input--group">
            <h3>運送アカウントにログインする</h3>
            <%= f.input :email, label: 'メールアドレス', required: false, autofocus: true %>
            <%= f.input :password, label: 'パスワード', required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "ログインする", class:"btn-primary btn__null btn__width--100" %>
        </div>
      <% end %>

      <%= render "carriers/shared/links" %>

    </div>
  </div>
</section>