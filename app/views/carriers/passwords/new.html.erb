<section id="forgot_password" class="container-fluid carrier slimLarge">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-inputs">
      <div class="inputContainer">
        <h3>パスワードを再発行します</h3>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, label: 'アカウント登録に使用したメールアドレス', required: false, autofocus: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "パスワードを再発行する", class:"btnNull btnWidth100" %>
        </div>
      </div>
    </div>
  <% end %>
</section>