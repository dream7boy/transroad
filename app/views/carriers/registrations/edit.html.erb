<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_name, label: "会社名", required: true, autofocus: true %>
    <%= f.input :post_code, label: "郵便番号", required: true %>
    <%= f.input :prefecture, label: "都道府県", required: true %>
    <%= f.input :ward, label: "市区町村", required: true %>
    <%= f.input :street, label: "住所", required: true %>

    <%= f.input :areas_covered, label: "運送をしている地域（複数選択できます）", collection: %w(東京都 神奈川県 大阪府 北海道), prompt: "選択してください", required: true %>
    <%= f.input :favorite_products, label: "運送が得意な品目（3種類まで）", collection: Carrier::FAVORITE_PRODUCTS, prompt: "選択してください", required: true %>
    <%= f.simple_fields_for :vehicles do |v| %>
      <%= v.input :size, label: "車両サイズ", collection: Vehicle::SIZES, prompt: "大きさをお選び下さい", required: true %>
      <%= v.input :vehicle_type, label: "車両形状", collection: Vehicle::VEHICLE_TYPES, prompt: "形状をお選び下さい", required: true %>
      <%= v.input :quantity, label: "車両数", required: true %>
    <% end %>

    <%= f.input :name_kanji, label: "お名前", required: true %>
    <%= f.input :name_furigana, label: "お名前（フリガナ）", required: true %>
    <%= f.input :phone, label: "電話番号", required: true %>
    <%= f.input :email, label: "メールアドレス", required: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <p>変更後の暗証番号</p>
    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <p>変更後の暗証番号（再確認）</p>
    <%= f.input :password_confirmation, required: false %>

    <p>今の暗証番号</p>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Go Back to My Shipment", carrier_shipments_path %>
