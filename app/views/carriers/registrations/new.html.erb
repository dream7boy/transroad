<section id="carrier__registration" class="container-fluid section__carrier well--xs">
  <div class="row">
    <!-- BS offset is not included since "section.section__carrier > div.row" has flex center assigned. / Shun-->
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 ">

      <h2>運送アカウント登録</h2>

      <%= simple_form_for @carrier, url: carrier_registration_path do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <div class="input--group hidden">
            <h3>会社情報</h3>
            <%= f.input :company_name, label: "会社名", required: true, autofocus: true %>
            <div class="container-fluid input--container">
              <div class="row input--row">
                <%= f.input :post_code, label: "郵便番号", wrapper_html: {class: "col-xs-12 col-sm-4"}, required: true %>
              </div>
            </div>
            <div class="container-fluid input--container">
              <div class="row input--row">
                <%= f.input :prefecture, label: "都道府県", wrapper_html: {class: "col-xs-12 col-sm-4"}, required: true %>
                <%= f.input :ward, label: "市区町村", wrapper_html: {class: "col-xs-12 col-sm-8"}, required: true %>
              </div>
            </div>
            <%= f.input :street, label: "住所", required: true %>
          </div>

          <div class="input--group">
            <h3>運送 ＆ 保有車両情報</h3>

            <!-- 999 -->
            <%#= render "delivery_area" %>
            <!-- 999 -->

            <!-- carrier-registration-delivery-area-20180115 / BACKUP START-->
            <%# if false %>
            <% prefectures = ["北海道・東北",["北海道","青森県","秋田県","岩手県","山形県","宮城県","福島県"]],["甲信越・北陸",["山梨県","長野県","新潟県","富山県","石川県","福井県"]],["関東",["茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県"]],["東海",["愛知県","静岡県","岐阜県","三重県"]],["関西",["大阪府","兵庫県","京都府","滋賀県","奈良県","和歌山県"]],["中国",["岡山県","広島県","鳥取県","島根県","山口県"]],["四国",["徳島県","香川県","愛媛県","高知県"]],["九州・沖縄",["福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"]] %>
            <%= f.input :areas_covered, label: "運送をしている地域（複数選択できます）", as: :grouped_select, collection: prefectures, selected: false, group_method: :last, required: true, wrapper_html: {id: "carrier_areas_covered--container"} %>
            <%# end %>
            <!-- carrier-registration-delivery-area-20180115 / BACKUP END-->

            <%= f.input :favorite_products, label: "運送が得意な品目（3種類まで）", collection: Carrier::FAVORITE_PRODUCTS, selected: Carrier::FAVORITE_PRODUCTS[0], required: true %>
            <%= f.simple_fields_for :vehicles do |v| %>
              <%= v.input :size, label: "車両サイズ", collection: Vehicle::SIZES, selected: Vehicle::SIZES[1], required: true %>
              <%= v.input :vehicle_type, label: "車両形状", collection: Vehicle::VEHICLE_TYPES, selected: Vehicle::VEHICLE_TYPES[0], required: true %>
              <%= v.input :quantity, label: "車両数", required: true %>
            <% end %>
          </div>

          <div class="input--group">
            <h3>連絡先 ＆ ログイン情報</h3>
            <div class="container-fluid input--container">
              <div class="row input--row">
                <%= f.input :name_kanji, label: "お名前", wrapper_html: {class: "col-xs-12 col-sm-6"}, required: true %>
                <%= f.input :name_furigana, label: "お名前（フリガナ）", wrapper_html: {class: "col-xs-12 col-sm-6"}, required: true %>
              </div>
            </div>
            <%= f.input :phone, label: "電話番号", required: true %>
            <%= f.input :email, label: "メールアドレス（ログインするときはこちらを使用します）", required: true, error: "メールアドレスを入力してください" %>
            <%# REF ONLY FOR COLLECTION / Delete later 888 / Shun = f.input :email, label: "メールアドレス（ログインするときはこちらを使用します）", collection: %w[Mike Nick Jason Tim], required: true %>
            <%= f.input :password, label: "パスワード（英数字で#{@minimum_password_length}文字以上のパスワードを入力してください）", required: true, error: "パスワードを入力してください" %>
            <%= f.input :password_confirmation, label: "パスワード確認", required: true %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "無料で登録する", class:"btn-primary btn__null btn__width--100" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<script type="text/javascript" src="//code.jquery.com/jquery-2.1.0.min.js"></script>
<%= javascript_include_tag('jquery.jpostal') %>
<script>
  $(function (){
    $('#carrier_post_code').jpostal({
      postcode : [ '#carrier_post_code' ],
      address  : {
        '#carrier_prefecture' : '%3',
        '#carrier_ward'       : '%4',
        '#carrier_street'     : '%5'
      }
    });
  });
</script>
<%= javascript_include_tag('multiple-select') %>
<script>
  $("#carrier_areas_covered").multipleSelect({
      allSelected: '全国',
      countSelected: '#都道府県',
      maxHeight: 500,
      minimumCountSelected: 7,
      multiple: true,
      noMatchesFound: '都道府県を選択してください',
      placeholder: '都道府県を選択してください',
      selectAllDelimiter: ['', ''],
      selectAllText: '全国',
  });
</script>