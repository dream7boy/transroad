<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    document.addEventListener("DOMContentLoaded", () => {

      const btn =  document.querySelector('#showNextInputs');
      const backBtns = document.querySelectorAll("[data-action='previous']");
      btn.addEventListener('click', handleClick);
      backBtns.forEach(btn => btn.addEventListener('click', handleClick));

      function handleClick() {
        const secondInput =  document.querySelector("section[data-name='inputBlock2']");
        const isInView =  secondInput.classList.contains('inView');
        isInView ? secondInput.classList.remove('inView') : secondInput.classList.add('inView');
        $('html, body').animate({
          scrollTop: $('html, body').offset().top
        }, 400);
      }

    });
  <% end %>
<% end %>