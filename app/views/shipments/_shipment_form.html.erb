<section id="new__shipment" class="container-fluid section__shipper well--xs">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 ">
      <% if params[:action] == 'new' %>
        <h2>運送案件を作成する</h2>
      <% else %>
        <h2>運送案件を変更する</h2>
      <% end %>

      <%= simple_form_for @shipment do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">

          <div class="input--group">
            <h3>荷物情報</h3>
            <%= f.input :shipment_category, label: "荷物の種類", collection: Shipment::COMMODITIES, required: true, as: :fake_select, include_hidden: false  %>
            <div class="container-fluid input--container">
              <div class="row input--row">
                <%= f.input :shipment_size_height, label: "縦幅 (cm)", required: true, as: :fake, wrapper_html: { class: "col-xs-4" } %>
                <%= f.input :shipment_size_width, label: "横幅 (cm)", required: true, as: :fake, wrapper_html: { class: "col-xs-4" } %>
                <%= f.input :shipment_size_depth, label: "奥行 (cm)", required: true, as: :fake, wrapper_html: { class: "col-xs-4" } %>
              </div>
            </div>
            <%= f.input :shipment_weight, label: "重量 (単体)", required: true, as: :fake %>
            <%= f.input :shipment_quantity, label: "個数 (1回の運送につき、発送する予定の数)", required: true, as: :fake %>
            <%= f.input :shipment_temperature, label: "温度管理", collection: ['常温','保冷','冷蔵','冷凍','分からない'], required: true, as: :fake_select, selected: [1] %>
            <div class="container-fluid input--container">
              <div class="row input--row">
                <%= f.input :shipment_duration_start, label: "案件の開始予定日", required: true, as: :fake, wrapper_html: { class: "col-xs-6" } %>
                <%= f.input :shipment_duration_end, label: "案件の終了予定日", required: true, as: :fake, wrapper_html: { class: "col-xs-6" } %>
              </div>
            </div>
            <%= f.input :shipment_frequency, label: "運送頻度", required: true, as: :fake %>
          </div>

          <!-- START / NESTED FORM FOR ADDING PICKUP LOCATION. KEPT FOR REFERENCE / Shun -->
          <% if false %>
          <div id="shipment__pickup__container" class="pickup__container">
            <h3>集荷先</h3>
            <%= f.simple_fields_for :pickups do |pickup| %>
              <%= render 'pickup_fields', f: pickup %>
            <% end %>
          </div>
          <%= link_to_add_association '集荷先を追加する', f, :pickups, class: 'btn btn-primary btn__null btn__form--add-nested', data: { association_insertion_node: '#shipment__pickup__container', association_insertion_method: :append } %>
          <% end %>
          <!-- END / NESTED FORM FOR ADDING PICKUP LOCATION. KEPT FOR REFERENCE / Shun -->

          <div class="input--group">
            <h3>荷物の集荷先</h3>
            <div class="container-fluid input--container">
              <div class="row input--row">
                <%= f.input :shipment_pickup_post_code, label: "郵便番号", wrapper_html: {class: "col-xs-12 col-sm-4"}, required: true, as: :fake %>
              </div>
            </div>
            <div class="container-fluid input--container">
              <div class="row input--row">
                <%= f.input :shipment_pickup_prefecture, label: "都道府県", wrapper_html: {class: "col-xs-12 col-sm-4"}, required: true, as: :fake %>
                <%= f.input :shipment_pickup_ward, label: "市区町村", wrapper_html: {class: "col-xs-12 col-sm-8"}, required: true, as: :fake %>
              </div>
            </div>
            <%= f.input :shipment_pickup_street, label: "住所", required: true, as: :fake %>
            <%= f.input :shipment_pickup_time, label: "集荷希望時間", collection: ['平日の午前','平日の午後','月曜日の午後','月曜日の早朝','その他'], required: true, as: :fake_select %>
          </div>

          <div class="input--group">
            <h3>荷物の発送先</h3>
            <div class="container-fluid input--container">
              <div class="row input--row">
                <%= f.input :shipment_delivery_post_code, label: "郵便番号", wrapper_html: {class: "col-xs-12 col-sm-4"}, required: true, as: :fake %>
              </div>
            </div>
            <div class="container-fluid input--container">
              <div class="row input--row">
                <%= f.input :shipment_delivery_prefecture, label: "都道府県", wrapper_html: {class: "col-xs-12 col-sm-4"}, required: true, as: :fake %>
                <%= f.input :shipment_delivery_ward, label: "市区町村", wrapper_html: {class: "col-xs-12 col-sm-8"}, required: true, as: :fake %>
              </div>
            </div>
            <%= f.input :shipment_delivery_street, label: "住所", required: true, as: :fake %>
            <%= f.input :shipment_delivery_time, label: "集荷希望時間", collection: ['平日の午前','平日の午後','月曜日の午後','月曜日の早朝','その他'], required: true, as: :fake_select %>
          </div>

          <div class="input--group">
            <h3>その他</h3>
            <%= f.input :shipment_additional_info, label: "備考欄", required: false, as: :fake %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "マッチする運送業者を表示", class:"btn-primary btn__null btn__width--100" %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</section>