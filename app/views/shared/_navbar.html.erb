<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= current_user.email %>
      <%= link_to shipments_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-table"></i> Shipments
      <% end %>
      <% if current_shipper.present? %>
        <%= link_to shipper_shipments_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <i class="fa fa-table"></i> My Shipments
        <% end %>
        <%= link_to facilities_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <i class="fa fa-table"></i> My Facilities
        <% end %>
      <% else %>
        <%= link_to carrier_shipments_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <i class="fa fa-table"></i> My Shipments
        <% end %>
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <% if current_shipper.present? %>
                <%= link_to destroy_shipper_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              <% else %>
                <%= link_to destroy_carrier_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Shipper Sign In"), new_shipper_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Carrier Sign In"), new_carrier_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
          <%= current_user.email %>
          <li>
            <%= link_to shipments_path do %>
              <i class="fa fa-table"></i> Shipments
            <% end %>
          </li>
          <% if current_shipper.present? %>
            <li>
              <%= link_to shipper_shipments_path do %>
                <i class="fa fa-table"></i> My Shipments
              <% end %>
            </li>
            <li>
              <%= link_to facilities_path, class: "navbar-wagon-item navbar-wagon-link" do %>
              <i class="fa fa-table"></i> My Facilities
            <% end %>
            </li>
            <li>
              <%= link_to destroy_shipper_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to carrier_shipments_path do %>
                <i class="fa fa-table"></i> My Shipments
              <% end %>
            </li>
            <li>
              <%= link_to destroy_carrier_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          <% end %>
        <% else %>
          <li>
            <%= link_to t(".sign_in", default: "Shipper Sign In"), new_shipper_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
          <li>
            <%= link_to t(".sign_in", default: "Carrier Sign In"), new_carrier_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

