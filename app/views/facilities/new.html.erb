<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <h1>new facility</h1>
      <%= simple_form_for @facility do |f| %>
        <%= f.error_notification %>

        <%= f.input :name %>
        <%= f.input :prefecture, collection: ["東京都", "神奈川県", "大阪府", "北海道"], prompt: "Choose a Prefecture" %>
        <%= f.input :address, collection: ["新宿区", "川崎市", "大阪市", "札幌市"], prompt: "Choose an address" %>

        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
