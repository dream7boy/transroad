<section id="shipper__shipment__match" class="container-fluid section__shipper well--sm">
  <div class="row row--block">

    <div class="form__progress--container col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form__progress--step">
        <% if @shipment.available == true %>
          <p><%= link_to "運送案件を修正", edit_shipment_path(@shipment) %></p>
        <% end %>
      </div>
      <div class="form__progress--step active">
        <p>運送会社を選択</p>
      </div>
      <div class="form__progress--step">
        <p>内容を確認</p>
      </div>
      <div class="form__progress--step">
        <p>完了</p>
      </div>
    </div>

    <div class="header_and_btn--container col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div>
        <h2 class="inline__block">運送会社を選択&ensp;</h2>
        <h3 class="inline__block bold"><%= @carriers_two_conditions.count %>社とマッチしました！</h3>
      </div>
      <button class="btn btn-primary btn__null btn__sub-color col-xs-5 float--right">依頼内容を確認する</button>
    </div>

    <div class="container col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div id="cards__container" class="row row--block">
          <% @carriers_two_conditions.each do |carrier| %>
            <div class="card__wrapper">
              <div class="card__carrier">
                <div class="card__carrier--img"></div>
                <h4><%= carrier.company_name %></h4>
                <ul class="card__list--container">
                  <% carrier.favorite_products.each do |product| %>
                    <li class="card__list--item"><%= product %></li>
                  <% end %>
                </ul>
                <div class="card__carrier--info">
                  <p><%= carrier.prefecture %> <%= carrier.ward %></p>
                  <p class="hidden"><%= carrier.street %> #-##-##</p>
                  <p class="hidden"><%= carrier.phone %></p>
                  <p>www.<%= carrier.company_name %>.co.jp</p>
                </div>
                <button class="btn btn-primary btn__null card__btn">御見積もりを依頼</button>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>

<div>
  <%= simple_form_for :carriers, method: :get, url: quotes_req_shipper_shipment_path do |f| %>
    <%= f.hidden_field :ids, value: [536,537,538] %>
    <%= f.button :submit, '依頼内容を確認する', class: "btn btn-primary" %>
  <% end %>
</div>

</section>









