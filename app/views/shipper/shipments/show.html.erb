<div class="container">
  <h1>My Shipments Show Page</h1>
  <div>
    <div>
      <%= link_to "My Shipments", shipper_shipments_path, class: "btn btn-primary" %>
      <% if @shipment.available == true %>
        <%= link_to "Edit", edit_shipment_path(@shipment), class: "btn btn-primary" %>
        <%= link_to "Delete", shipment_path(@shipment),
        method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
      <% end %>
    </div>
    <div>
      Ship-ID:<%= @shipment.id %> <%= @shipment.distance %>km <%= @shipment.offer_rate %>yen <%= @shipment.car_type %> <%= @shipment.shipper.email %> |
    </div>

    <div>
      P-ID:<%= @pickup.id %> <%= @pickup.company_name %> <%= @pickup.start_date %> <%= @pickup.end_date %> <%= @pickup.prefecture %> <%= @pickup.ward %> <%= @pickup.category %> <%= @pickup.weight %>kg
    </div>

    <div>
      D-ID:<%= @delivery.id %> <%= @delivery.company_name %> <%= @delivery.start_date %> <%= @delivery.end_date %> <%= @delivery.prefecture %> <%= @delivery.ward %>
    </div>

    <div>
      <% @shipment.deals.each do |deal| %>
        <div>
          <%= deal.created_at.getlocal.strftime("%Y/%m/%e - %H:%M%p") %> <%= deal.carrier.email %> <span style="color:blue"><%= deal.deal_status %></span>
        </div>
        <% if @shipment.available == true %>
          <div>
            <%= simple_form_for @shipment, url: shipper_shipment_path do |f| %>
              <%= f.hidden_field :carrier_id, value: deal.carrier_id %>
              <%= f.button :submit, 'ACCEPT', class: "btn btn-primary" %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
