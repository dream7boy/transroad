<div class="cardWrapper cardCarrier">

  <div class="carrierImg"></div>
  <%= text_area_tag name="#{carrier.id}", nil, class:"carrier__id hidden" %>

  <h4><%= carrier.company_name %></h4>
      <ul class="cardListContainer">
    <% carrier.favorite_products.each do |product| %>
      <li class="cardListItem"><%= product %></li>
    <% end %>
  </ul>

  <div class="cardCarrierInfo">
    <p><%= carrier.prefecture %> <%= carrier.ward %></p>
    <p class="hidden"><%= carrier.street %> #-##-##</p>
    <p class="hidden"><%= carrier.phone %></p>
    <p>www.<%= carrier.company_name %>.co.jp</p>
  </div>

  <button class="btn btnNull cardBtn">御見積もりを依頼</button>

</div>
